<script>
    let code = 1;
    dd.runtime.permission.requestAuthCode({
        corpId: "<?php echo $id; ?>",
        onSuccess : function(res) {
            // 调用成功时回调
            document.getElementById('re').innerHTML = "success:" + res.code;
            code = res.code;
        },
        onFail : function(err) {
            // 调用失败时回调
            document.getElementById('re').innerHTML = "error:" + err.errorMessage + err.errorCode;
        }
    });

    const TwoWayBinding = {
        data() {
            return {
                message: code
            }
        }
    }

    Vue.createApp(TwoWayBinding).mount('#two-way-binding')
</script>